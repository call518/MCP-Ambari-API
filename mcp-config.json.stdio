{
  "mcpServers": {
    "ambari-api": {
      "command": "python",
      "args": ["-m", "mcp_ambari_api.mcp_main"],
      "env": {
        "PYTHONPATH": "/app/src",
        "AMBARI_HOST": "host.docker.internal",
        "AMBARI_PORT": "7070",
        "AMBARI_USER": "admin",
        "AMBARI_PASS": "admin",
        "AMBARI_CLUSTER_NAME": "TEST-AMBARI",
        "MCP_LOG_LEVEL": "DEBUG"
      }
    }
  }
}
